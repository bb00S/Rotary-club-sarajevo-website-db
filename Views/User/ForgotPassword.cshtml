@{
    ViewData["Title"] = "Zaboravljena lozinka";
}
<div class="container">
    <h1 class="mb-3">Zaboravili ste lozinku?</h1>
    <p class="mb-3">Unesite svoju email adresu kako bi Vam poslali link za promjenu lozinke</p>
    <form asp-action="ForgotPassword" asp-controller="User" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="email" class="form-label">Email adresa</label>
            <input name="email" type="email" class="form-control" id="email" placeholder="name@example.com">
        </div>
        <button class="btn btn-primary" type="submit">Pošalji</button>
    </form>
</div>