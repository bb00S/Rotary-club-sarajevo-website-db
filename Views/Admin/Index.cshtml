@using RotaryClub.ViewModels.Admin;
@model AdminViewModel
@{
    ViewData["Title"] = "Kontrolna ploča";
    Layout = "Admin/_Layout";
}

@section Styles{
    <link rel="stylesheet" href="~/css/admin.css" />
}

<div class="container">
    <h1 class="text-center">Kontrolna ploča</h1>
</div>

<hr/>

<div class="container my-4">
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-sm-4">
                <div class="card" id="shadow">
                    <div class="card-body p-5 shadow-5 text-center">
						<div class="list-group group">
							<div class="group-item">
								<div class="action-log"><i class="bi bi-phone"></i></div>
								<div class="row news-card p-3 bg-white">
									<strong>Sastanci</strong>
									<div class="md-text">10:00 AM</div>
								</div>
							</div>
							<div class="group-item">
								<div class="action-log"><i class="bi bi-briefcase"></i></div>
								<div class="row news-card p-3 bg-white">
									<strong>Ukupan broj projekata</strong>
									<div class="md-text">@Model.TotalProjectCount</div>
								</div>
							</div>
							<div class="group-item">
								<div class="action-log"><i class="bi bi-people"></i></div>
								<div class="row news-card p-3 bg-white">
									<strong>Ukupan broj članova</strong>
									<div class="md-text">@Model.TotalMemberCount</div>
								</div>
							</div>
							<div class="group-item">
								<div class="action-log"><i class="bi bi-ticket"></i></div>
								<div class="row news-card p-3 bg-white">
									<strong>Podsjetnik</strong>
									<div class="md-text">Tasks</div>
								</div>
							</div>
							<div class="group-item">
								<div class="action-log"><i class="bi bi-check"></i></div>
								<div class="row news-card p-3 bg-white">
									<strong>Aktivnosti</strong>
									<div class="md-text">Completed the dashboard html</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			
			<div class="col-sm-8">

				<div class="text-center mt-5">
                    <h2><span class="h2-secondary">Aktuelno</span></h2>
                </div>

                <div class="container mt-5 mb-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-8">
                            <div class="d-flex flex-row"></div>
                            <div class="row news-card p-3 bg-white">
                                <div class="col-md-4">
                                    <div class="feed-image"><img class="news-feed-image rounded img-fluid img-responsive" src="~/img/rotary-logo.png"></div>
                                </div>
                                <div class="col-md-8 mt-3 mt-lg-0">
                                    <div class="news-feed-text">
                                        <h5>Zadatak 1</h5><span>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard<br></span>
                                        <div class="d-flex flex-row justify-content-between align-items-center mt-2">
                                            <div class="d-flex creator-profile">
                                                <div class="d-flex flex-column ml-2">
                                                    <span class="date">Jan 20,2023</span>
                                                </div>
                                            </div><i class="fa fa-share share"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container mt-5 mb-5">
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-8">
                            <div class="d-flex flex-row"></div>
                            <div class="row news-card p-3 bg-white">
                                <div class="col-md-4">
                                    <div class="feed-image"><img class="news-feed-image rounded img-fluid img-responsive" src="~/img/rotary-logo.png"></div>
                                </div>
                                <div class="col-md-8 mt-3 mt-lg-0">
                                    <div class="news-feed-text">
                                        <h5>Zadatak 2</h5><span>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard<br></span>
                                        <div class="d-flex flex-row justify-content-between align-items-center mt-2">
                                            <div class="d-flex creator-profile">
                                                <div class="d-flex flex-column ml-2">
                                                    <span class="date">Apr 20,2023</span>
                                                </div>
                                            </div><i class="fa fa-share share"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

		</div>
	</div>
</div>
	