@model IEnumerable<Project>;
@{
    ViewData["Title"] = "Projekti";
    Layout = "Admin/_Layout";
    int n = 1;
}

@section Styles{
        <link rel="stylesheet" href="~/css/admin.css" />
}

<section class="d-flex justify-content-center align-items-center h-80">
    <img class="" src="~/img/login.png" />
</section>

<div class="container py-4">
    <div class="row g-0 align-items-center">
        <div class="col-sm-12 mx-auto">
            <div class="card" id="shadow">
                <div class="card-body p-5 shadow-5">
                    <div class="table-responsive table-striped rounded">
                        <table class="table table-sm">
                            <thead class="table-dark g-2 shadow p-3 mb-5 mt-3 rounded">
                                <tr>
                                    <th>#</th>
                                    <th>Naslov</th>
                                    <th>Podnaslov</th>
                                    <th>Sadržaj</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model)
                                {
                                    <tr class="g-2 shadow p-3 mb-5 mt-3 rounded fw-bold">
                                        <td>@(n++)</td>
                                        <td>@project.Title</td>
                                        <td>@project.SubTitle</td>
                                        <td>@project.Content</td>
                                        <td>@(project.UpdatedAt.ToString("dd.MM.yyyy."))</td>
                                        <td>
                                            
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a class="btn btn-primary" asp-action="Create">Kreiraj projekat</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

