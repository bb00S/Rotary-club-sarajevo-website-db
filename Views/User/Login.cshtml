@using RotaryClub.ViewModels.User;
@model UserLoginViewModel;
@{
    ViewData["Title"] = "Prijava";
}

<div class="container">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Message
        </div>
    }
    <form method="post" asp-action="Login" enctype="multipart/form-data">
        <div class="form-group mb-2">
            <label for="email">Email adresa</label>
            <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Unesite email adresu" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-2">
            <label for="password">Lozinka</label>
            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Lozinka" required>
            <span asp-validation-for="Password" class="text-danger"></span>
            <a asp-action="ForgotPassword">Zaboravili ste lozinku?</a>
        </div>
        <button type="submit" class="btn btn-primary">Uloguj se</button>
    </form>
</div>