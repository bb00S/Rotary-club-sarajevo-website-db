@model IEnumerable<Member>;
@{
    ViewData["Title"] = "Članovi";
}
@section Styles{
    <link rel="stylesheet" href="~/css/admin.css" />
}

<section class="d-flex justify-content-center align-items-center h-80">
    <img class="" src="~/img/login.png" />
</section>

<div class="container py-4">
    <div class="row g-0 align-items-center">
        <div class="col-sm-12 mx-auto">
            <div class="card" id="shadow">
                <div class="card-body p-5 shadow-5">
                    <div class="table-responsive table-striped rounded">
                        <table class="table table-sm">
                            <thead class="table-dark g-2 shadow p-3 mb-5 mt-3 rounded">
                                <tr>
                                    <th>ID</th>
                                    <th>Ime i prezime</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                    @foreach (var member in Model)
                                    {
                                        <tr class="g-2 shadow p-3 mb-5 mt-3 rounded fw-bold">
                                            <td>@member.Id</td>
                                            <td>@member.Name</td>
                                            <td>@member.Email</td>
                                        </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

