@section Styles{
<link rel="stylesheet" href="~/css/user.css" />
}
@using RotaryClub.ViewModels.User;
@model UserLoginViewModel;
@{
    ViewData["Title"] = "Prijava";
}

<body>
<section class="d-flex justify-content-center align-items-center h-70">
    <img class= "" src="~/img/login.png" />
</section>

<section class="text-center text-lg-start">
  <div class="container py-4">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Message
        </div>
    }
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">PRIJAVA</h2>
            <form>
              <div class="form-outline mb-4">
                <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Unesite email adresu" required>
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>

              <div class="form-outline mb-4">
                <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Lozinka" required>
                <span asp-validation-for="Password" class="text-danger"></span>
               </div>

              <div class="form-outline mb-4">
                <a asp-action="ForgotPassword">Zaboravili ste lozinku?</a>
              </div>

              <div class="form-check d-flex justify-content-center mb-4">
                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                <label class="form-check-label" for="form2Example33">Prijavite se za novosti</label>
              </div>

              <button type="submit" class="btn btn-primary btn-block mb-4">
                Uloguj se
              </button>
              <div class="text-center">
                <p>ili pomoću:</p>
                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="bi bi-facebook"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="bi bi-google"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                  <i class="bi bi-twitter"></i>
                </button>

                <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="bi bi-github" aria-hidden="true"></i>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
            <img src="~/img/inspire-home.jpg" class="w-100 rounded-4 shadow-4" alt="" />
      </div>
    </div>
  </div>
</section>

 </body>