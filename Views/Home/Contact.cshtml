@model Email;
@{
    ViewData["Title"] = "Kontaktirajte nas";
}
<section id="contact" class="contact">
    <div class="container my-5">
        <div class="d-flex justify-content-center">
            <p class="badge rounded-pill text-bg-primary p-2">Kontakt</p>
        </div>
        <div class="d-flex justify-content-center">
            <h2 class="h2 heading-2">Kontaktirajte <strong class="">Nas</strong></h2>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6 mb-3 mb-lg-0">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column justify-content-center " id="info">
                        <div class="row">
                            <div class="info-box mb-4">
                                <i class="bi bi-geo-alt"></i>
                                <h3>Naša adresa</h3>
                                <p id="address">
                                    Hotel Europe,
                                    Vladislava Skarića 5,
                                    71000 Sarajevo,
                                    Bosnia and Herzegovina
                                </p>
                            </div>
                        </div>

                        <div class="row">
                                <div class="info-box mb-4">
                                    <i class="bi bi-envelope-at"></i>
                                    <h3>Pošaljite nam email</h3>
                                    <p id="email">rotaryclub.sarajevo@gmail.com</p>
                                </div>
                        </div>

                        <div class="row">
                            <div class="info-box mb-4">
                                <i class="bi bi-telephone-outbound"></i>
                                <h3>Nazovite nas</h3>
                                <p id="phone">+387 (0)33 000 000</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <form method="post" action="@Url.Action("SendContactEmail", "Email")" enctype="multipart/form-data" class="needs-validation" id="contact-form" novalidate>
                    <div class="row g-2 mb-3">
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="name" asp-for="Name" placeholder="John" required>
                                <label for="name">Ime</label>
                                <div class="invalid-feedback">
                                    Unesite Vaše ime
                                </div>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="lastname" asp-for="Lastname" placeholder="Doe" required>
                                <label for="lastname">Prezime</label>
                                <div class="invalid-feedback">
                                    Unesite Vaše prezime
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="email" asp-for="EmailAddress" placeholder="name@example.com" required>
                        <label for="email">Email adresa</label>
                        <div class="invalid-feedback">
                            Unesite Vašu email adresu
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="phone" asp-for="PhoneNumber" placeholder="555-333" required>
                        <label for="phone">Broj telefona</label>
                        <div class="invalid-feedback">
                            Unesite Vaš broj telefona
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control comment" placeholder="Leave your comment here" id="comment" asp-for="Message" required></textarea>
                        <label for="comment">Upit</label>
                        <div class="invalid-feedback">
                            Unesite Vaš upit
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Pošalji</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script type="text/javascript" src="~/js/formValidation.js" defer></script>
}
