@model IEnumerable<Member>;
@{
    ViewData["Title"] = "Članovi";
}
@section Styles{
    <link rel="stylesheet" href="~/css/admin.css" />
}

<section class="d-flex justify-content-center align-items-center h-80">
    <img class="" src="~/img/login.png" />
</section>

<div class="container py-4">
    <div class="row g-0 align-items-center">
        <div class="col-sm-12 mx-auto">
            <div class="card" id="shadow">
                <div class="card-body p-5 shadow-5">
                    <div class="row my-3">
                        <h2 class="mb-3">Počasni članovi</h2>
                        @foreach (var member in Model.Where(m => m.Honorary))
                        {
                            <div class="card p-0 m-md-3 mt-3" id="shadow" style="width: 18rem;">
                                <img src="@member.PhotoUrl" alt="" class="card-img-top img-fluid" />
                                <div class="card-body text-center">
                                    <h5 class="card-title">@member.Name</h5>
                                    <p class="card-text">@member.Email</p>
                                    <p class="card-text fw-bold">Počasni član: @(member.Honorary ? "Da" : "Ne")</p>
                                    <a href="mailto:@member.Email" class="btn btn-primary">Pošalji Email</a>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="row my-3">
                        <h2 class="mb-3">Članovi</h2>
                        @foreach (var member in Model.Where(m => !m.Honorary))
                        {
                            <div class="card" id="shadow" style="width: 18rem;">
                                <img src="@member.PhotoUrl" alt="" class="card-img-top img-fluid" />
                                <div class="card-body text-center">
                                    <h5 class="card-title">@member.Name</h5>
                                    <p class="card-text">@member.Email</p>
                                    <p class="card-text">@member.Honorary</p>
                                    <a href="mailto:@member.Email" class="btn btn-primary">Pošalji Email</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

